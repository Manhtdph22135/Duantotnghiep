@model IEnumerable<API.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<h3 class="text-center mb-5">Quản lý sản phẩm</h3>

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <div class="d-flex flex-grow-1 me-3">
        <input type="text" class="form-control" placeholder="Tìm kiếm">
        <button class="btn btn-outline-secondary ms-2"><i class="fas fa-search"></i></button>
    </div>
    <div class="d-flex align-items-center">
        <label class="me-2">Từ Ngày:</label>
        <input type="date" class="form-control me-2">
        <label class="me-2">Đến Ngày:</label>
        <input type="date" class="form-control me-2">
        <button class="btn btn-warning">Lọc</button>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Thêm sản phẩm</a>
</div>

<table class="table table-bordered text-center">
    <thead class="align-top">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Price)</th>
            <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.First().UpdateAt)</th>
            <th>@Html.DisplayNameFor(model => model.First().Statuss)</th>
            <th>@Html.DisplayNameFor(model => model.First().Category)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdateAt)</td>
                <td>
                    @if (item.Statuss == 0)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Không hoạt động</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Category.CategoryId)</td>
                <td class="d-flex justify-content-center gap-2">
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info"><i class="fas fa-info-circle"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
