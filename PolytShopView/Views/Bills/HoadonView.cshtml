@model IEnumerable<API.DOT.BillDOT>

@{
    ViewData["Title"] = "BillDOT";
}

<h3 class="text-center">Quản lý hóa đơn</h3>
<div class="d-flex flex-grow-1 me-3">
    <input type="text" class="form-control" placeholder="Tìm kiếm">
    <button class="btn btn-outline-secondary ms-2"><i class="fas fa-search"></i></button>
</div>
    <div class="d-flex justify-content-between align-items-center mb-3 mt-3">
        <a asp-controller="Bills" asp-action="CreateBillDot" class="btn btn-success"><i class="fas fa-plus"></i></a>
    </div>
<div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-5 m-2 p-3 border rounded">
                <p><strong>Tên khách hàng: </strong>@Html.DisplayFor(modelItem => item.Customer)</p>
                <p><strong>Sản phẩm:       </strong>@Html.DisplayFor(modelItem => item.ProductName)</p>
                <p><strong>Địa chỉ:        </strong>@Html.DisplayFor(modelItem => item.CusAddress)</p>
                <p><strong>SĐT:            </strong>@Html.DisplayFor(modelItem => item.Phone)</p>
                <p>
                    <strong>Trạng thái:     </strong>@if (item.Status == 0)
                                                     {
                                                         <span>Chờ Thanh toán</span>
                                                     }
                                                     else
                                                     {
                                                         <span>Đã Thanh toán</span>
                                                     }
                </p>
                <a asp-action="Details" asp-route-id="@item.BillID" class="btn btn-primary">Chi Tiết</a>
            </div>
        }
</div>