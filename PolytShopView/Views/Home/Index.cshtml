@model IEnumerable<API.DOT.HomeDOT>

@{
    ViewData["Title"] = "Index";
}

<!-- Banner -->
<section class="banner py-4">
    <div class="container text-center">
        <img src="./img/banner.webp" alt="Banner" class="img-fluid">
    </div>
</section>

<div class="container text-center mt-4">
    <div class="row">
        <div class="col-md-6">
            <h5 class="fw-bold">TOP</h5>
            <img src="./img/anh1.webp" class="img-fluid" alt="Top Products" style="height: 550px; object-fit: cover;">
            <p><a href="#" class="text-decoration-none text-dark fw-bold">MORE PRODUCTS <i class="bi bi-caret-right-fill"></i></a></p>
        </div>
        <div class="col-md-6">
            <h5 class="fw-bold">BOTTOM</h5>
            <img src="./img/anh1.webp" class="img-fluid" alt="Bottom Products" style="height: 550px; object-fit: cover;">
            <p><a href="#" class="text-decoration-none text-dark fw-bold">MORE PRODUCTS <i class="bi bi-caret-right-fill"></i></a></p>
        </div>
    </div>
</div>

<!-- New Goods Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">New Goods</h2>
        <div id="newGoodsCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
                        <!-- Item -->
                        @foreach (var item in Model)
                        {
                            <div class="col">
                                <a href="#!/chitietsp">
                                    <div class="card">
                                        <img src="./img/_dsc3762-6672.jpg" class="card-img-top img-fluid" alt="Product" style="height: 250px; object-fit: cover;">
                                        <div class="card-body text-center">
                                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                                            <p class="card-text text-danger">@Html.DisplayFor(modelItem => item.Price)$</p>
                                            <button class="btn btn-dark">Add to Cart</button>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                        <!-- More Product Cards -->
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
                        <!-- Item -->
                        @foreach (var item in Model)
                        {
                            <div class="col">
                                <div class="card">
                                    <img src="./img/_dsc3762-6672.jpg" class="card-img-top img-fluid" alt="Product" style="height: 250px; object-fit: cover;">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                                        <p class="card-text text-danger">@Html.DisplayFor(modelItem => item.Price)$</p>
                                        <button class="btn btn-dark">Add to Cart</button>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- More Product Cards -->
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev position-absolute top-50 start-0 translate-middle-y" type="button" data-bs-target="#newGoodsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon text-dark bg-dark p-2" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next position-absolute top-50 end-0 translate-middle-y" type="button" data-bs-target="#newGoodsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon text-dark bg-dark p-2" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

