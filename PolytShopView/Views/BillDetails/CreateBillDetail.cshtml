@model API.Models.BillDetail

@{
    ViewData["Title"] = "CreateBillDetail";
}

<h1>Create Bill Detail</h1>

<h4>Bill Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBillDetail" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="BillId" value="@ViewBag.BillId" />

            <div class="form-group">
                <label asp-for="ProductDetailId" class="control-label"></label>
                <input type="text" asp-for="ProductDetailId" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input type="number" step="0.01" asp-for="UnitPrice" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create Bill Detail" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>